{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "packages/platform/*",
    "packages/orm/*",
    "packages/graphql/*",
    "packages/security/*",
    "packages/specs/*",
    "packages/third-parties/*",
    "docs"

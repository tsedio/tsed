{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "suppressImplicitAnyIndexErrors": false,
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": "src/",
    "outDir": "lib/",
    "declaration": true,
    "declarationDir":"dts/",
    "noResolve": false,
    "types":[
      "node",
      "chai",
      "mocha",
      "cookie-parser",
      "express",
      "reflect-metadata",
      "supertest"
    ]
  },

  "exclude": [
    "node_modules",
    "test",
    "dts"
  ]
}
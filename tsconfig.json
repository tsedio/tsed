{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@tsed/*": [
        "packages/*/src",
        "packages/platform/*/src",
        "packages/security/*/src",
        "packages/specs/*/src",
        "packages/orm/*/src",
        "packages/graphql/*/src",
        "packages/third-parties/*/src"
      ]
    }
  },
  "linterOptions": {
    "exclude": [
      "docs",
      "integration",
      "examples"
    ]
  },
  "exclude": [
    "test",
    "**/test",
    "docs",
    "integration",
    "examples",
    "lib",
    "**/lib"
  ]
}

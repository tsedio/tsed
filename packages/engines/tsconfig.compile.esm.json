{
  "extends": "./tsconfig.compile.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2020",
    "rootDir": "src",
    "outDir": "./lib/esm",
    "declaration": true,
    "declarationDir": "./lib/types"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "test",
    "lib",
    "benchmark",
    "coverage",
    "spec",
    "**/*.benchmark.ts",
    "**/*.spec.ts",
    "keys",
    "jest.config.js",
    "**/__mock__/**"
  ]
}

    "@tsed/testcontainers-mongo": "workspace:*",
    "@tsed/typescript": "workspace:*",
    "cross-env": "7.0.3",
    "eslint": "9.12.0",
    "ts-mockito": "^2.6.1",
    "typescript": "5.4.5",
    "vitest": "2.1.2"
  },
  "peerDependencies": {
    "@mikro-orm/core": ">=4.5.9",
    "@tsed/core": "8.0.0-beta.6",
    "@tsed/di": "8.0.0-beta.6",

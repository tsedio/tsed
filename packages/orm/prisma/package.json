{
  "name": "@tsed/prisma",
  "description": "Generate Ts.ED JsonSchema based on Prisma models",
  "type": "module",
  "version": "8.0.0-beta.6",
  "source": "./src/index.ts",
  "main": "./lib/esm/index.js",
  "module": "./lib/esm/index.js",
  "typings": "./lib/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/esm/index.js",
      "default": "./lib/esm/index.js"
    }
  },
  "bin": {
    "tsed-prisma": "lib/esm/generator.js",
    "tsed-prisma-esm": "lib/esm/generator.js"
  },
  "scripts": {
    "prebuild": "cd ../../core && yarn build",
    "build": "rm -rf lib && yarn build:ts && monorepo build-hybrid",
    "build:ts": "tsc --build tsconfig.json",
    "test": "vitest run",
    "generate:postgres:esm": "yarn build && cd test/postgres-esm && prisma -v && prisma generate",
    "generate:mongo:esm": "yarn build && cd test/mongo-esm && prisma -v && prisma generate",
    "generate:circular:esm": "yarn build && cd test/circular-ref && prisma -v && prisma generate",
    "test:ci": "vitest run --coverage.thresholds.autoUpdate=true"
  },
  "dependencies": {
    "@prisma/generator-helper": "^5.20.0",
    "@prisma/internals": "^5.20.0",
    "change-case": "^5.4.4",
    "fs-extra": "^11.2.0",
    "pluralize": "^8.0.0",
    "ts-morph": "^12.2.0",
    "tslib": "2.7.0"
  },
  "devDependencies": {
    "@prisma/client": "^5.20.0",
    "@tsed/barrels": "workspace:*",
    "@tsed/core": "workspace:*",
    "@tsed/di": "workspace:*",
    "@tsed/json-mapper": "workspace:*",
    "@tsed/monorepo-utils": "2.3.5",
    "@tsed/schema": "workspace:*",
    "@tsed/typescript": "workspace:*",
    "@types/change-case": "^2.3.1",
    "@types/pluralize": "0.0.33",
    "eslint": "9.12.0",
    "prisma": "^4.16.2",
    "typescript": "5.4.5",
    "vitest": "2.1.2"
  },
  "peerDependencies": {
    "@prisma/client": ">=5.0.0",
    "@tsed/core": "8.0.0-beta.6",
    "@tsed/di": "8.0.0-beta.6",
    "@tsed/json-mapper": "8.0.0-beta.6",
    "@tsed/schema": "8.0.0-beta.6"
  },
  "keywords": [
    "TypeScript",
    "decorators",
    "models",
    "json schema",
    "JsonSchema",
    "class",
    "classes",
    "tsed",
    "prisma"
  ]
}
